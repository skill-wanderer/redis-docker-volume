# Production Environment Variables for Ubuntu Server

# Redis Security
REDIS_PASSWORD=YourSecurePasswordHere123!

# Docker Compose Project
COMPOSE_PROJECT_NAME=redis-production

# Server Configuration
REDIS_DATA_PATH=/opt/redis/data
REDIS_BACKUP_PATH=/opt/redis/backups
REDIS_LOG_LEVEL=notice

# Network Security
REDIS_BIND_ADDRESS=127.0.0.1
REDIS_PORT=6379

# Backup Settings
BACKUP_RETENTION_DAYS=7
BACKUP_TIME=0200
